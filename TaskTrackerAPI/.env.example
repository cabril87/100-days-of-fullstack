# TaskTrackerAPI Environment Variables Example
# Copy this file to .env and fill in your actual values

# JWT Authentication Settings
# Generate a secure random string at least 32 characters long
TokenKey=your_secure_token_key_here_at_least_32_chars

# Password Hashing Pepper
# Generate a different secure random string - do not reuse the TokenKey
PasswordKey=your_secure_password_pepper_here_different_from_token

# Token Expiration Settings
AccessTokenExpireMinutes=60
RefreshTokenExpireDays=7

# Database Connection (if not using appsettings.json)
# ConnectionString=Server=localhost;Database=TaskTracker;Trusted_Connection=True;TrustServerCertificate=True

# Logging Level (optional)
# LogLevel=Information 