{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=TaskTracker;Trusted_Connection=True;TrustServerCertificate=True"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Csrf": {
    "BypassInDevelopment": true,
    "TokenExpirationMinutes": 1440,
    "ExcludedEndpoints": [
      "/api/auth/login",
      "/api/auth/register",
      "/hubs/",
      "/api/v1/auth/login",
      "/api/v1/auth/register",
      "/api/v1/auth/csrf",
      "/api/v1/debug/",
      "/api/v1/dataprotection/",
      "/api/v1/family/",
      "/api/family/"
    ]
  },
  "DataProtection": {
    "DisableKeyRotation": true,
    "KeyLifetimeDays": 365
  }
}
