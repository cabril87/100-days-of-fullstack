{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=TaskTracker;Trusted_Connection=True;TrustServerCertificate=True"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "AppSettings": {
    "TokenKey": "PLACEHOLDER_USE_USER_SECRETS_OR_ENV_VARS",
    "PasswordKey": "PLACEHOLDER_USE_USER_SECRETS_OR_ENV_VARS",
    "AccessTokenExpireMinutes": "60",
    "RefreshTokenExpireDays": "7",
    "ValidIssuer": "TaskTrackerAPI",
    "ValidAudience": "TaskTrackerClients"
  },
  "RateLimiting": {
    "DefaultLimit": 100,
    "DefaultTimeWindowSeconds": 60,
    "AuthEndpointLimit": 5,
    "AuthEndpointTimeWindowSeconds": 60,
    "TaskEndpointLimit": 50,
    "TaskEndpointTimeWindowSeconds": 30,
    "MaxRetryCount": 5,
    "BaseBackoffDelaySeconds": 1
  },
  "Caching": {
    "DefaultDurationSeconds": 60,
    "CacheablePaths": [
      "/api/categories",
      "/api/tags",
      "/api/taskstatistics",
      "/api/boards",
      "/api/achievements",
      "/api/badges"
    ]
  },
  "Performance": {
    "BatchWindowMs": 50,
    "BatchableEndpoints": [
      "/api/taskitems/list",
      "/api/categories",
      "/api/tags",
      "/api/boards",
      "/api/achievements", 
      "/api/badges",
      "/api/families/members"
    ],
    "CommandTimeout": 30,
    "MaxDegreeOfParallelism": 4,
    "CompressLargeResponses": true
  },
  "Csrf": {
    "TokenExpirationMinutes": 120,
    "ExcludedEndpoints": [
      "/api/auth/login",
      "/api/auth/register",
      "/api/auth/refresh-token",
      "/api/auth/logout"
    ]
  },
  "BatchOperations": {
    "MaxBatchSize": 100,
    "DefaultBulkCommitSize": 50,
    "EnableAtomicOperations": true
  },
  "SecurityHeaders": {
    "UseXContentTypeOptions": true,
    "UseXFrameOptions": true,
    "XFrameOptionsMode": "DENY",
    "UseXXssProtection": true,
    "UseReferrerPolicy": true,
    "ReferrerPolicy": "strict-origin-when-cross-origin",
    "UseContentSecurityPolicy": true,
    "ContentSecurityPolicy": "default-src 'none'; frame-ancestors 'none'",
    "ApiOnlyMode": true,
    "UsePermissionsPolicy": true,
    "PermissionsPolicy": "accelerometer=(), camera=(), geolocation=(), gyroscope=(), magnetometer=(), microphone=(), payment=(), usb=()",
    "UseCacheControl": true,
    "CacheControl": "no-cache, no-store, must-revalidate",
    "UseHsts": true,
    "HstsMaxAge": 31536000,
    "HstsIncludeSubDomains": true,
    "HstsPreload": true,
    "UseCrossOriginResourcePolicy": true,
    "CrossOriginResourcePolicy": "same-origin",
    "UseCrossOriginOpenerPolicy": true,
    "CrossOriginOpenerPolicy": "same-origin",
    "UseCrossOriginEmbedderPolicy": true,
    "CrossOriginEmbedderPolicy": "require-corp",
    "EnableNonceBasedCSP": true,
    "UseReportTo": true,
    "ReportToEndpoint": "/api/security/cspreport",
    "UseStrictTransportSecurity": true,
    "UseClearSiteData": true,
    "ClearSiteDataOnSignOut": "cache, cookies, storage"
  }
}