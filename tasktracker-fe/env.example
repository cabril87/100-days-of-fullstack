# Environment Configuration
# Copy this file to .env.local and configure for your environment

# Application Environment
# Options: development, alpha, beta, staging, production
NEXT_PUBLIC_APP_STAGE=development

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:5000
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Feature Flags
NEXT_PUBLIC_ENABLE_REGISTRATION=true
NEXT_PUBLIC_ENABLE_PUBLIC_PAGES=false
NEXT_PUBLIC_ENABLE_BLOG=false
NEXT_PUBLIC_ENABLE_CONTACT_FORM=false
NEXT_PUBLIC_SHOW_COMING_SOON=true

# Analytics (only for production)
NEXT_PUBLIC_GA_ID=
NEXT_PUBLIC_ANALYTICS_ENABLED=false

# Payment Integration (beta and above)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
NEXT_PUBLIC_ENABLE_PAYMENTS=false

# Support Features
NEXT_PUBLIC_ENABLE_LIVE_CHAT=false
NEXT_PUBLIC_SUPPORT_EMAIL=support@tasktracker.com

# Debug Mode
NEXT_PUBLIC_DEBUG_MODE=true 